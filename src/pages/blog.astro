---
import Layout from "../layouts/Layout.astro";
const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---

<Layout title="blog - nick909">
	<main class="animate__animated animate__fadeIn">
		<h1 class="font-bold text-3xl py-2">blog</h1>
            <ul class="favlist py-3">
                {allPosts.map((post: any) => <li><a href={post.url} class="font-bold relative py-1 after:absolute after:bottom-0 after:left-0 after:w-full after:scale-x-0 hover:after:scale-x-100 after:transition-all after:origin-left after:h-[2px] after:bg-lavender">{post.frontmatter.pubDate.toString().slice(0,10)} - {post.frontmatter.title}</a></li>)}
            </ul>
	</main>
</Layout>

<style>
	@import url("https://fonts.googleapis.com/css2?family=Unbounded:wght@200..900&display=swap");
	body {
		@apply flex h-screen;
		padding: 0 1.5rem 1.5rem 1.5rem;
		font-family: "Unbounded", sans-serif;
	}

	.underline-2 {
		border-bottom: 1px solid;
	}

	.favlist {
		list-style: inside;
	}
</style>
