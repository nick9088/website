---
interface Props {
	title: string;
}

const { title } = Astro.props;
const { frontmatter } = Astro.props;
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import 'animate.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{frontmatter.title} - nick909</title>
	</head>
	<body>
		<div class='container'>
			<Navbar />
			<div class="postdetails py-3 animate__animated animate__fadeIn">
				<h1 class="font-bold text-3xl ">{frontmatter.title}</h1>
				<p class="text-2xl">by {frontmatter.author}</p>
				<p class="text-2xs">Published on: {frontmatter.pubDate.toString().slice(0,10)}</p>
			</div>

			<div class="py-3 animate__animated animate__fadeIn">
				<slot />
			</div>
		</div>
		<Footer />
	</body>
</html>
<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Unbounded:wght@200..900&display=swap");
	@tailwind base;
	@tailwind components;
	@tailwind utilities;
	@layer base {
		html,
		body,
		body > div:first-child,
		div#__next,
		div#__next > div {
			@apply h-full text-text;
			padding: 0 1.5rem 1.5rem 1.5rem;
			font-family: "Unbounded", sans-serif;
		}
	}
	
	@media (min-width: 1024px) {
		.container {
			@apply max-w-screen-md;
		}
	}

	@layer utilities {
		.text-balance {
			text-wrap: balance;
		}
	}

	.icon-link .icon {
		font-size: 24px; 
	}

	.postdetails {
		border-bottom: 3px solid;
	}

	body {
		background-image: url('/public/back.jpg');
	}
</style>
